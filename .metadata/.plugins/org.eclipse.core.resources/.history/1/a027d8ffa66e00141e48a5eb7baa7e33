import java.util.ArrayList;
import java.util.Iterator;
import java.io.BufferedReader;
import java.io.IOException;
import java.nio.charset.Charset;
import java.nio.charset.StandardCharsets;
import java.nio.file.Files;
import java.nio.file.Path;

public class Mucchio implements GruppoOrdinabile {

	private ArrayList<Piece> list;
	private static Charset charset = StandardCharsets.UTF_8;
	
	private class Pezzo implements Piece {
		private String id;
		private String north;
		private String south;
		private String east;
		private String west;
		private Piece northRef;
		private Piece southRef;
		private Piece westRef;
		private Piece eastRef;

		public String getId()      { return id; }
		public String getNorth()   { return north; }
		public String getSouth()   { return south; }
		public String getWest()    { return west; }
		public String getEast()    { return east;	}
		public Piece getNorthRef() { return null; }
		public void setNorthRef(Piece p) {}
		public Piece getSouthRef() { return null; }
		public void setSouthRef(Piece p) {}
		public Piece getWestRef()  { return null;  }
		public void setWestRef(Piece p) {}
		public Piece getEastRef()  { return eastRef;  }
		public void setEastRef(Piece p) {eastRef = p;}
	}

	
	private String convert(Path path){
		StringBuilder content = new StringBuilder();
		try (BufferedReader reader = Files.newBufferedReader(path,
			charset)) {
			String line = null;
			while ((line = reader.readLine()) != null) {
				content.append(line);
			}
		} catch (IOException e) {
			System.err.println(e);
		}
		return content.toString();
	}
	
	@Override
	public void fill(Path path) {
		// TODO Auto-generated method stub
		String content = convert(path);
	}

	@Override
	public void sort() {
		// TODO Auto-generated method stub

	}

	@Override
	public void write(Path path) {
		// TODO Auto-generated method stub

	}

}
